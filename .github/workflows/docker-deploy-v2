name: Build, Scan & Push Docker Images

on:
  push:
    branches: [ develop ]
  workflow_dispatch:

jobs:
  build-scan-push:
    runs-on: ubuntu-latest
    permissions:
      contents: read
      packages: write

    steps:
      # 1. Checkout code
      - name: Checkout Repository
        uses: actions/checkout@v4

      # 2. Install JDK for SonarQube
      - name: Set up JDK 17
        uses: actions/setup-java@v4
        with:
          distribution: 'temurin'
          java-version: '17'

      # 3. Create SonarQube project (NEVER FAILS)
      - name: Create SonarQube Project If Not Exists
        run: |
          echo "Attempting to create SonarQube project..."
          curl -s -o /dev/null -w "%{http_code}" \
            -u "${{ secrets.SONAR_TOKEN }}:" \
            -X POST "${{ secrets.SONAR_HOST_URL }}/api/projects/create" \
            -d "project=ajay-devops-project" \
            -d "name=ajay-devops-project" \
          || echo "Ignoring SonarQube creation error"
        continue-on-error: true   # <-- This ensures GitHub NEVER fails this step

      # 4. SonarQube Scan
      - name: SonarQube Scan
        uses: SonarSource/sonarqube-scan-action@v3
        with:
          projectBaseDir: .
        env:
          SONAR_HOST_URL: ${{ secrets.SONAR_HOST_URL }}
          SONAR_TOKEN: ${{ secrets.SONAR_TOKEN }}

      # 5. Sonar Quality Gate Check
      - name: SonarQube Quality Gate
        uses: SonarSource/sonarqube-quality-gate-action@v1
        env:
          SONAR_HOST_URL: ${{ secrets.SONAR_HOST_URL }}
          SONAR_TOKEN: ${{ secrets.SONAR_TOKEN }}
        timeout-minutes: 5

      # 6. Login to Docker Hub
      - name: Login to Docker Hub
        uses: docker/login-action@v3
        with:
          username: ${{ secrets.DOCKERHUB_USERNAME }}
          password: ${{ secrets.DOCKERHUB_TOKEN }}

      # 7. Setup Docker Buildx
      - name: Set up Docker Buildx
        uses: docker/setup-buildx-action@v3

      # 8. Build & Push Frontend
      - name: Build and Push Frontend
        uses: docker/build-push-action@v6
        with:
          context: ./frontend
          push: true
          tags: |
            ajaykumara/frontend-app:${{ github.run_number }}
            ajaykumara/frontend-app:latest
          cache-from: type=gha
          cache-to: type=gha,mode=max

      # 9. Build & Push Backend
      - name: Build and Push Backend
        uses: docker/build-push-action@v6
        with:
          context: ./backend
          push: true
          tags: |
            ajaykumara/backend-app:${{ github.run_number }}
            ajaykumara/backend-app:latest
          cache-from: type=gha
          cache-to: type=gha,mode=max

      # 10. Final Success Message
      - name: Done
        run: |
          echo "All steps completed successfully!"
          echo "Docker images pushed:"
          echo " - ajaykumara/frontend-app:latest"
          echo " - ajaykumara/backend-app:latest"
